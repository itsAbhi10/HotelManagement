@model BookingModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <style type="text/css">
        h2 {
            font-family: 'Open Sans', sans-serif;
            font-size: 40px;
            font-weight: 600;
            color: burlywood;
            margin-top: 2%;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2>Room Booking</h2>
            <div class="form-group">
                <label for="Id" class="col-sm-3 control-label">Room Number</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomNumber, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">Customer Name</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })<br />
                </div>
            </div>
            <div class="form-group">
                <label for="phoneNumber" class="col-sm-3 control-label">Mobile Number </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })<br />

                </div>
            </div>
            

            <div class="form-group">
                <label for="lastName" class="col-sm-3 control-label">Adult Count</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Adult, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Adult, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Children Count </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.ChildrenCount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ChildrenCount, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Room Type</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomType, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomType, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="aadharno" class="col-sm-3 control-label">Addhar No</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.AadharNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AadharNo, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="aadharno" class="col-sm-3 control-label">Check In</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.CheckIn, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CheckIn, "", new { @class = "text-danger" })<br />
                    <br />
                </div>
            </div>
            

            <div class="form-group">
                <label for="aadharno" class="col-sm-3 control-label">Check Out</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.CheckOut, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CheckOut, "", new { @class = "text-danger" })<br />
                    <br />
                </div>
            </div>
            <input type="submit" value="Book Room" name="submit" class="btn btn-primary btn-block" />

        }
    </div>
</body>
</html>

@model AccountModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddRoom</title>
    <meta name="viewport" content="width=device-width" />
    <title>Book</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <style type="text/css">
        h2 {
            font-family: 'Open Sans', sans-serif;
            font-size: 40px;
            font-weight: 600;
            color: Black;
            margin-top: 2%;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2>Add Room</h2>
            
            <div class="form-group">
                <label for="Id" class="col-sm-3 control-label">Room Number</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomNumber, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">Room Image</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomImage, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomImage, "", new { @class = "text-danger" })<br />
                </div>
            </div>
            <div class="form-group">
                <label for="phoneNumber" class="col-sm-3 control-label">Room Price </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomPrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomPrice, "", new { @class = "text-danger" })<br />

                </div>
            </div>


            

            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Room Type </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomType, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomType, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Room Capacity</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomCapacity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomCapacity, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="aadharno" class="col-sm-3 control-label">Room Description</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.RoomDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomDescription, "", new { @class = "text-danger" })<br />
                </div>
            </div>

            <div class="form-group">
                <label for="aadharno" class="col-sm-3 control-label">Is Active</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.IsActive, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })<br />
                    <br />
                </div>
            </div>


            
            <input type="submit" value="Add Room" name="submit" class="btn btn-primary btn-block" />

        }
    </div>
</body>
</html>

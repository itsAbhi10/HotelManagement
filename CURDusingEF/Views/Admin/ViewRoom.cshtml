@model IEnumerable<CURDusingEF.Models.AccountModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewRoom</title>
    <meta name="viewport" content="width=device-width" />
    <title>Room</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">RoomId</th>
                <th scope="col">RoomNumber</th>
                <th scope="col">RoomImage</th>

                <th scope="col">RoomPrice</th>

                <th scope="col">RoomType</th>
                <th scope="col">RoomCapacity</th>
                <th scope="col">RoomDescription</th>
                <th scope="col">IsActive</th>
                <th scope="col">Edit</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoomId</td>
                    <td>@item.RoomNumber</td>
                    <td>@item.RoomImage</td>
                    <td>@item.RoomPrice</td>

                    <td>@item.RoomType</td>
                    <td>@item.RoomCapacity</td>
                    <td>@item.RoomDescription</td>
                    <td>@item.IsActive</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Admin", new{RoomId = item.RoomId})</td>

                </tr>
            }

        </tbody>
    </table>
</body>
</html>
